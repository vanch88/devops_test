# Web Server
WEB_PORT=8080

# Database Configuration
DB_PORT=3306
DB_NAME=app_db
DB_USER=app_user
DB_PASSWORD=app_pass
DB_ROOT_PASSWORD=root_pass

# MariaDB Environment Variables (for docker image)
MYSQL_DATABASE=app_db
MYSQL_USER=app_user
MYSQL_PASSWORD=app_pass
MYSQL_ROOT_PASSWORD=root_pass

# Symfony Configuration
APP_ENV=dev
APP_SECRET=change_me_to_random_string

# Database URL for Symfony
DATABASE_URL=mysql://app_user:app_pass@db:3306/app_db?serverVersion=11.4&charset=utf8mb4

# Default URI
DEFAULT_URI=http://localhost:8080

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=3600
